<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="com.shop.goodee.item.ItemMapper">

	<insert id="setAdd" parameterType="ItemVO" useGeneratedKeys="true" keyProperty="itemNum">
		INSERT INTO ITEM VALUES(NULL, #{id}, #{itemName}, #{price}, #{title}, #{type}, #{point}, #{detail}, #{stock}, IFNULL(#{count}, 0), #{url}, NOW(), 0, 0, #{shop}, IFNULL(#{role}, "모두"))
	</insert>
	<insert id="setAddFile" parameterType="ItemFileVO">
		INSERT INTO ITEM_FILE VALUES(NULL, #{itemNum}, #{fileName}, #{oriName})
	</insert>
	
	<sql id="search">
		SELECT S.COMPANY, I.*, F.* 
		FROM ITEM I
		LEFT OUTER JOIN
		SELLER S
		USING(ID)
		LEFT OUTER JOIN
		ITEM_FILE F
		USING(ITEMNUM)
	</sql>
	
	<!-- 최신순 -->
	<select id="getList" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		GROUP BY(I.ITEMNUM)
		ORDER BY I.ITEMNUM DESC
		LIMIT 0, 4
	</select>
	<resultMap type="ItemVO" id="getListResult">
		<id column="ITEMNUM" property="itemNum"/>
		<result column="ID" property="id"/>
		<result column="ITEMNAME" property="itemName"/>
		<result column="PRICE" property="price"/>
		<result column="TITLE" property="title"/>
		<result column="TYPE" property="type"/>
		<result column="ROLE" property="role"/>
		<result column="POINT" property="point"/>
		<result column="DETAIL" property="detail"/>
		<result column="STOCK" property="stock"/>
		<result column="COUNT" property="count"/>
		<result column="SHOP" property="shop"/>
		<result column="URL" property="url"/>
		<result column="DATE" property="date"/>
		<result column="HIT" property="hit"/>
		<result column="STATUS" property="status"/>
		
		<!-- association 1:1관계일때 -->
		<association property="company" javaType="String"> 
			<result column="COMPANY" property="company"/>
		</association>	
		
		<!-- collection 1:N관계일때 -->
		<collection property="itemFileVOs" javaType="List" ofType="ItemFileVO"> 
			<id column="FILENUM" property="fileNum"/>
			<result column="ITEMNUM" property="itemNum"/>
			<result column="FILENAME" property="fileName"/>
			<result column="ORINAME" property="oriName"/>		
		</collection>	
	</resultMap>
	
	<!-- 인기순 -->
	<select id="getListHit" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		GROUP BY(I.ITEMNUM)
		ORDER BY HIT DESC
		LIMIT 0, 4
	</select>
	
	<!-- VIP전용 -->
	<select id="getListVIP" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		WHERE `ROLE` = 'VIP'
		GROUP BY(I.ITEMNUM)
		ORDER BY I.ITEMNUM DESC
		LIMIT 0, 4
	</select>
	
	<!-- 즉석추첨형 -->
	<select id="getList1" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		WHERE `TYPE` = '추첨형'
		GROUP BY(I.ITEMNUM)
		ORDER BY I.ITEMNUM DESC
	</select>
	
	<!-- 추첨형 -->
	<select id="getList2" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		WHERE `TYPE` = '즉석추첨형'
		GROUP BY(I.ITEMNUM)
		ORDER BY I.ITEMNUM DESC
	</select>
	
	<!-- 초간단미션 -->
	<select id="getList3" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		WHERE `TYPE` = '초간단미션'
		GROUP BY(I.ITEMNUM)
		ORDER BY I.ITEMNUM DESC
	</select>
	
		<!-- VIP전용 -->
	<select id="getList4" resultType="ItemVO" resultMap="getListResult">
		<include refid="search"></include>
		WHERE `ROLE` = 'VIP'
		GROUP BY(I.ITEMNUM)
		ORDER BY I.ITEMNUM DESC
	</select>
</mapper>